<Page x:ConnectionId='1'
    x:Class="Battleships.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Battleships"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Battleships.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Width="900"
            Height="400"
            Grid.Column="0"
            Background="Yellow">
            <ListView x:ConnectionId='2' x:Name="Player"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Stretch"
                                                                         >
                <Style TargetType="ListViewItem">
                    <Setter Property="Height" Value="20" />
                    <Setter Property="MinHeight" Value="20" />
                </Style>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid   MaximumRowsOrColumns="10"   Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate                             >
                        <Grid x:ConnectionId='4' Width="40" Height="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='5' Grid.Column="0"                     />
                            <TextBlock x:ConnectionId='6' Grid.Column="1"                        />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid
            Width="900"
            Height="400"
            Grid.Column="1"
            Background="Green">
        </Grid>
    </Grid>
</Page>

